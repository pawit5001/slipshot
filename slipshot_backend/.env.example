# .env.example - ตัวอย่างไฟล์ Environment Variables
# คัดลอกไฟล์นี้เป็น .env และแก้ไขค่าตามต้องการ

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-here-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.onrender.com

# Database - Local Development
POSTGRES_DB=slipshot_db
POSTGRES_USER=slipshot_user
POSTGRES_PASSWORD=your-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database - Production (Render.com provides DATABASE_URL)
# DATABASE_URL=postgresql://user:password@host:port/database

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Render.com auto-sets this
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com
